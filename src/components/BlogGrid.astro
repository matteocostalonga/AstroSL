---
import { LinkCard, CardGrid } from '@astrojs/starlight/components';

const allPosts = await Astro.glob('../pages/posts/*.{md,mdx}');
---

<CardGrid>
    {allPosts.map((post) => (
        <div>
            <img class="blog-image" src={post.frontmatter.image.url} alt={post.frontmatter.image.alt} />
            <LinkCard
                title={post.frontmatter.title}
                href={post.url}
                description={post.frontmatter.description}
            />
            <ul>
                {post.frontmatter.tags.map((tag: any) => (
                    <li>{tag}</li>
                ))}
            </ul>
        </div>
    ))}
</CardGrid>
