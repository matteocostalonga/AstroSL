---
import DinoLayout from "../../layouts/DinoLayout.astro";

let res = await fetch("https://norian.studio/wp-json/wp/v2/dinos");
let posts = await res.json();
---

<DinoLayout title="Dinos!">
  <section>
    <h1>List of Dinosaurs</h1>
    {
		posts.map((post: any) => (
			<article>
				<h2>
				<a href={`wp/dinos/${post.slug}/`} set:html={post.title.rendered} />
				</h2>
				<Fragment set:html={post.content.rendered} />
			</article>
		))
    }
  </section>
</DinoLayout>